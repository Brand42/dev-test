

  <h1>{{title }}</h1>
  <p>Welcome to {{title }}</p>

  <div class="row">

    {{#each articles}}
        <div class="col col-xs-3 article">

          <a href="/article/{{id}}">{{title}}</a>

          {{#if img}}
            <img src="{{img}}" alt="">
          {{/if}}

        </div>
    {{else}}

    <p class="empty">No content</p>

    {{/each}}

  </div>
